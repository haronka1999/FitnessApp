<Window x:Class="FitnessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessApp.UI"
        xmlns:uc="clr-namespace:FitnessApp.UI"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="FitnesApp" Height="450" Width="800">
    <StackPanel>

        <TabControl >
            <TabItem Header="Főoldal">
                <uc:FoOldal x:Name="Home" ></uc:FoOldal> 
            </TabItem>

            <TabItem Header="Új kliens">
                <uc:UjKliens x:Name="NewClient"></uc:UjKliens>
            </TabItem>

            <TabItem Header="Kliensek">
                <uc:Kliensek x:Name="Clients"></uc:Kliensek>
            </TabItem>

            <TabItem Header="Bérlet hozzáadása">
                <uc:UjBerlet x:Name="NewAbonament"></uc:UjBerlet>
            </TabItem>

        </TabControl>

        
    </StackPanel>
</Window>

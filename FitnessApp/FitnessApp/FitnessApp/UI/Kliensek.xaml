<UserControl x:Class="FitnessApp.UI.Kliensek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessApp.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBox IsReadOnly="False"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 SpellCheck.IsEnabled="True"
                 AcceptsReturn="True"
                 Height="20" Width="200" 
                 HorizontalAlignment="Left"/>
            <Button Content="Keresés" Margin="20,0,0,0" Width="100"/>
        </StackPanel>

        <Grid Margin="10">
            <DataGrid Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="*"/>
                    <DataGridTextColumn Header="Név" Width="2*"/>
                    <DataGridTextColumn Header="Telefonszám" Width="2*"/>
                    <DataGridTextColumn Header="e-mail" Width="2*"/>
                    <DataGridTextColumn Header="CNP" Width="2*"/>
                    <DataGridTextColumn Header="Lakcím" Width="2*"/>
                    <DataGridTextColumn Header="Regisztrációs dátum" Width="2*"/>
                    <DataGridTextColumn Header="Megjegyzés" Width="3*"/>
                </DataGrid.Columns>
                <!--<DataGridTemplateColumn >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10" Width="100">Edit</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10" Width="100">Delete</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->
            </DataGrid>  
        </Grid>
    </StackPanel>
</UserControl>

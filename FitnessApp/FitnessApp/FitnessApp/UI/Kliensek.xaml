<UserControl x:Class="FitnessApp.UI.Kliensek" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:FitnessApp.UI" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBox IsReadOnly="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" AcceptsReturn="True" Height="20" Width="200" HorizontalAlignment="Left" />
            <Button Content="Keresés" Margin="20,0,0,0" Width="100" />
        </StackPanel>

        <Grid Margin="10">
            <DataGrid Name="KliensGrid" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="*" Binding="{Binding kliens_id}" />
                    <DataGridTextColumn Header="Név" Width="2*" Binding="{Binding nev}" />
                    <DataGridTextColumn Header=" Telefonszám" Width="2*" Binding="{Binding telefon}" />
                    <DataGridTextColumn Header="e-mail" Width="2*" Binding="{Binding email}" />
                    <DataGridTextColumn Header="letrehozasi_datum" Width="2*" Binding="{Binding inserted_date}" />
                    <DataGridTextColumn Header="CNP" Width="2*" Binding="{Binding szemelyi}" />
                    <DataGridTextColumn Header="Lakcím" Width="2*" Binding="{Binding cim}" />
                    <DataGridTextColumn Header="vonalkod" Width="2*" Binding="{Binding vonalkod}" />
                    <DataGridTextColumn Header="Megjegyzés" Width="3*" Binding="{Binding megjegyzes}" />

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="Delete_User" Margin="10" Width="100">Törlés</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <WrapPanel>
            <Button Name="editButton" Click="Edit_User" Content="Szerkesztés" Margin="20" Width="100" HorizontalAlignment="Left" />
            <Button Name="saveEditButton" Click="Save_Edited_Users" Visibility="Hidden" Content="Mentés" Margin="20" Width="100" HorizontalAlignment="Right" />
        </WrapPanel>

    </StackPanel>
</UserControl>

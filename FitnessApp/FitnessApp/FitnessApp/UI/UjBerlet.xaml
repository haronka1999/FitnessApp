<UserControl x:Class="FitnessApp.UI.UjBerlet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessApp.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label  Grid.Row="0">Időtartam:</Label>
            <TextBox  Grid.Row="0" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" PreviewTextInput="NumberValidationTextBox_1" />

            <Label Grid.Row="1">Belépés szám:</Label>
            <TextBox Name ="input_2" Grid.Row="1" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" PreviewTextInput="NumberValidationTextBox_2" />

            <Label Grid.Row="2">Napi belépési limit:</Label>
            <TextBox Grid.Row="2" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" PreviewTextInput="NumberValidationTextBox_3" />

            <Label Grid.Row="3">Időtartam limit:</Label>
            <TextBox Grid.Row="3" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" />

            <Label Grid.Row="4">Nap limit:</Label>
            <TextBox Grid.Row="4" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" />

            <Label Grid.Row="5">Kliens Id:</Label>
            <TextBox Grid.Row="5" Grid.Column="1" AcceptsReturn="True" Margin="0,0,0,10" />

        </Grid>

        <WrapPanel>
            <Button Name="BtnSave" Click="BtnSave_click" Margin="10" Width="100" Content="Mentés"/>
            <Button Margin="10" Width="100" Content="Mégse"/>
        </WrapPanel>
    </StackPanel>
    
</UserControl>
